*, html, body {
  margin: 0;
  padding: 0; }

html, body {
  height: 100%;
  max-height: 100%; }

img {
  border: 0; }

ul {
  list-style-type: none; }

.clear {
  clear: both; }

a {
  text-decoration: none;
  color: #e25151; }

a:hover {
  background: #ffc4c4;
  color: #111111;
  text-shadow: #dddddd 1px 1px 0px; }

body {
  font-size: 110%;
  background: black;
  color: #eeeeee;
  font-family: "Cardo", arial, serif;
  text-shadow: #cccccc 1px 1px 0px; }

h1 {
  margin-top: 43px;
  text-shadow: #333333 1px 1px 0px; }
  h1 a {
    color: #ff5100; }
  h1 a:hover {
    color: red;
    background: none;
    text-shadow: white 1px 1px 0px; }

h1, h2 {
  font-family: "Lobster", arial, serif; }

h1 span {
  display: block;
  font-size: 0.6em;
  color: #dddddd; }

#icon {
  float: left; }

h2 {
  color: #333333;
  background: #cccccc;
  background: -webkit-gradient(linear, left top, left bottom, from(white), to(#aaaaaa));
  background: -moz-linear-gradient(white, #aaaaaa);
  padding: 10px 1.5%; }

h3 {
  background: #dddddd;
  background: -webkit-gradient(linear, left top, left bottom, from(#fafafa), to(#bbbbbb));
  background: -moz-linear-gradient(#fafafa, #bbbbbb);
  padding: 8px 1.5%; }

.inset {
  margin: 0 auto;
  padding: 1px 1.5%; }

#header {
  background: #00ad6e;
  background: -webkit-gradient(linear, left top, left bottom, from(#00ce82), to(#036419));
  background: -moz-linear-gradient(#00ce82, #036419);
  color: #111111; }

#container {
  background: #eeeeee;
  color: #222222;
  -moz-border-radius-bottomleft: 15px;
  -moz-border-radius-bottomright: 15px;
  -webkit-border-bottom-left-radius: 15px;
  -webkit-border-bottom-right-radius: 15px; }

#footer {
  margin-top: 15px;
  font-size: 0.85em;
  padding: 0 1.5% 10px; }
  #footer p {
    font-size: 0.9em; }
  #footer p.makevoid_copy {
    margin-top: 10px; }

ul#mangas li, ul#chapters li {
  background: #fafafa;
  padding: 10px 1.5%;
  border-bottom: 1px solid #999999; }
  ul#mangas li a, ul#chapters li a {
    font-weight: bold;
    color: #151f16; }
  ul#mangas li a:visited, ul#chapters li a:visited {
    color: #505f51; }
  ul#mangas li a:hover, ul#chapters li a:hover {
    color: #485249; }
  ul#mangas li a:active, ul#chapters li a:active {
    color: #7b857c; }

.readbox {
  margin: 10px 10px 15px;
  padding: 7px 10px;
  background: white; }
  .readbox p {
    margin: 5px 0; }

form input {
  width: 100%;
  height: 45px;
  font-size: 1.8em;
  padding: 5px 20px; }

#flashes {
  background: #46ff46;
  background: -webkit-gradient(linear, left top, left bottom, from(#46ff46), to(white));
  background: -moz-linear-gradient(#46ff46, white);
  padding: 8px 1.5%; }

#icon2 {
  float: right;
  position: relative;
  top: -42px; }

#konsole {
  color: white;
  background: #444444;
  padding: 5px;
  height: 22px;
  height: 72px;
  height: 132px;
  font-size: left; }

#menu {
  text-align: center; }
  #menu #tab_bar {
    height: 30px; }
  #menu a {
    font-size: 1.1em;
    color: white;
    padding: 6px 10px; }
  #menu a.left {
    float: left; }
  #menu a.right {
    float: right; }
  #menu a:hover {
    background: #999999; }

#over #imgg {
  width: 100%;
  overflow: hidden;
  position: absolute;
  height: 100%; }
  #over #imgg img {
    width: 100%;
    position: absolute; }
  #over #imgg img#first {
    -webkit-transform: translate3d(0px, 0px, 0); }

#over.desktop {
  width: 93%;
  height: auto;
  margin: 0 auto; }
  #over.desktop #imgg {
    position: static;
    overflow: visible;
    margin: 15px 0 0; }
    #over.desktop #imgg img {
      position: static; }

#read {
  background: #666666; }

.pagination {
  margin: 10px 20px; }
  .pagination a {
    padding: 3px 6px;
    background: #dddddd; }
  .pagination a:hover {
    background: white; }
